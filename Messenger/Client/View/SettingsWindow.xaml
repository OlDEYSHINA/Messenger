<Window x:Class="Client.View.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.View"
        xmlns:viewModel="clr-namespace:Client.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModel:SettingsViewModel}"
        Title="Настройки" Height="400" Width="400">
    <Grid>
        <CheckBox IsChecked="{Binding IsEnabledDarkTheme}"  Content="Включить темную тему" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
